<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p4"
    tools:context=".HighestScoreActivity">

    <LinearLayout
        android:id="@+id/scoreWin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightWinBlack"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/w2"
            android:importantForAccessibility="no" />


        <TextView
            android:id="@+id/highestScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/highestScore"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:id="@+id/againBt"
                android:src="@drawable/b2"
                android:layout_width="188dp"
                android:layout_marginStart="15dp"
                android:layout_height="match_parent"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/homeBt"
                android:layout_width="188dp"
                android:layout_height="98dp"
                android:layout_marginEnd="15dp"
                android:importantForAccessibility="no"
                android:src="@drawable/b3" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>